#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/typescript-to-lua@1.31.1_typescript@5.8.3/node_modules/typescript-to-lua/dist/node_modules:/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/typescript-to-lua@1.31.1_typescript@5.8.3/node_modules/typescript-to-lua/node_modules:/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/typescript-to-lua@1.31.1_typescript@5.8.3/node_modules:/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/typescript-to-lua@1.31.1_typescript@5.8.3/node_modules/typescript-to-lua/dist/node_modules:/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/typescript-to-lua@1.31.1_typescript@5.8.3/node_modules/typescript-to-lua/node_modules:/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/typescript-to-lua@1.31.1_typescript@5.8.3/node_modules:/home/allen/projects/computercraft/computercraft-ts/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../typescript-to-lua/dist/tstl.js" "$@"
else
  exec node  "$basedir/../typescript-to-lua/dist/tstl.js" "$@"
fi
